<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            android:id="@+id/volume_poster"
            android:contentDescription="@string/poster_content_desc" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/book_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/volume_poster"
            android:layout_toRightOf="@+id/volume_poster"
            android:id="@+id/volume_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/book_authors"
            android:textSize="15sp"
            android:layout_below="@+id/volume_title"
            android:layout_toEndOf="@id/volume_poster"
            android:layout_toRightOf="@id/volume_poster"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/volume_authors"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>